<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Trò chuyện</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <style>
    * {
      box-sizing: border-box;
    }

    .user {
      display: flex;
      align-items: center;
      padding: 12px 24px;
      cursor: pointer;
    }

    .user:nth-child(odd) {
      background-color: #F4F5F7;
    }

    .user:hover {
      background-color: #E6EFFF;
      transition: 0.3s;
    }

    .avatar {
      font-weight: bold;
      font-size: 1.5rem;
      background-color: deepskyblue;
      width: 50px;
      height: 50px;
      margin-right: 16px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      color: white
    }

    .user-info {
      height: 50px;
      flex-grow: 1;
    }

    .user-name {
      font-size: 1.1rem;

    }

    .user-info .online {
      font-size: 0.9rem;
      color: rgb(99, 99, 99)
    }

    .user .status {
      width: 90px;
      text-align: center;
    }

    .user:hover {
      background-color: #E6EFFF;
    }

    .user:hover .avatar {
      background-color: rgb(7, 142, 204);
      transition: 0.3s;
    }

    .user:hover .user-name {
      font-weight: 450;
      transition: 0.3s;
    }

    .conversation {
      background-color: rgb(158, 158, 158);
      padding: 24px;
      height: 75vh;
      overflow: auto;
    }
    
    .message {
      border-radius: 8px;
      padding: 12px;
      margin-bottom: 12px;
      width: max-content;
      max-width: 60%;
      font-size: 0.9rem;
    }

    .img-message {
      border-radius: 8px;
      margin-bottom: 12px;
      width: max-content;
      max-width: 50%;
    }
    .img-message img {
      max-width: 100%;
      border-radius: 12px;
    }
    .img-message img:hover {
       opacity: 0.85;
    }

    .my-message {
      border-radius: 12px;
      background-color: #DBEAFE;
    }
    .my-message:hover {
      background-color: #b4cbe9;
      transition: 0.3s;
    }

    .their-message {
      border-radius: 12px;
      background-color: white;
      margin-left: auto;
      margin-right: 0;
    }
    .their-message:hover {
      background-color: rgb(231, 231, 231);
      transition: 0.3s;
    }
    .message .time {
      margin-top: 2px;
      display: block;
      font-size: 0.8rem;
      color: rgb(102, 102, 102);
    }

    .message-input {
      border-top: 1px solid rgb(190, 190, 190);
      display: flex;
      position: relative;
    }
    .typing {
        background-color: rgb(242, 251, 255);
        border-radius: 4px;
        padding: 4px 8px;
        width: fit-content;
        font-size: 0.7em;
        position: absolute;
        top: -25px;
        left: 2px;
    }

    .message-input input[type="text"] {
        flex-grow: 1;
        border: none;
        padding: 8px 16px;
    }

    .message-input input[type="text"]:focus {
      border: none;
      outline: none;
      transition: 0.3s;
    } 

    .message-input a{
      text-decoration: none;
      padding: 8px;
      margin: 8px;
    }
    .message-input a:hover{
      background-color: rgb(215, 229, 255);
      border-radius: 4px;
    }

    .user .actions {
       color:rgb(161, 161, 161);
       font-size: 1.2rem;
    }
    .user .actions i {
       display: inline-block;
        border-radius: 8px;
       padding: 12px;
    }
    .user .actions i:hover {
       display: inline-block;
       color:rgb(128, 128, 128);
       background-color: rgb(215, 229, 255);
       transition: 0.3s;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-9">
        <div class="rounded border mt-3 mb-3">
          <div class="user">
            <% if (typeof partnerInfo !== 'undefined' && partnerInfo !== null) { %>
              <div class="avatar"><img src="<%= partnerInfo.avatar %>" style="width:100%; border-radius:50%"></div>
              <div class="user-info">
                <div class="user-name"><%= partnerInfo.name %></div>
                <div class="online">Vừa mới truy cập</div>
              </div>
            <% } else { %>
              <div class="avatar">C</div>
              <div class="user-info">
                <div class="user-name">Phạm Công Chánh</div>
                <div class="online">Vừa mới truy cập</div>
              </div>
            <% } %>
            <div class="actions">
              <i class="fas fa-phone-alt"></i>
              <i class="fas fa-video"></i>
              <i class="fas fa-search"></i>
              <!-- Back button -->
              <a href="/" class="btn btn-secondary btn-sm ml-2">Quay lại</a>
            </div>
          </div>
          <div class="conversation">
              <% if (typeof history !== 'undefined' && history.length > 0) { %>
                  <% history.forEach(msg => { %>
                      <% if (msg.sender === user.emails[0].value) { %>
                          <% if (msg.type === 'text') { %>
                              <div class="message my-message"><%= msg.content %>
                                <span class="time"><%= new Date(msg.timestamp).toLocaleTimeString() %></span>
                              </div>
                          <% } else if (msg.type === 'image') { %>
                              <div class="img-message my-message">
                                <img src="<%= msg.content %>">
                              </div>
                          <% } %>
                      <% } else { %>
                          <% if (msg.type === 'text') { %>
                              <div class="message their-message"><%= msg.content %>
                                <span class="time"><%= new Date(msg.timestamp).toLocaleTimeString() %></span>
                              </div>
                          <% } else if (msg.type === 'image') { %>
                              <div class="img-message their-message">
                                <img src="<%= msg.content %>">
                              </div>
                          <% } %>
                      <% } %>
                  <% }); %>
              <% } %>
          </div>
          <div class="message-input">
            <% if (typeof partnerInfo !== 'undefined' && partnerInfo !== null) { %>
              <div class="typing" style="display: none;"><%= partnerInfo.name %> đang soạn tin...</div>
            <% } else { %>
              <div class="typing">Bạn bè đang soạn tin...</div>
            <% } %>
            <input type="text" placeholder="Nhập tin nhắn">
            <a href="#">Gửi</a>
          </div>
        </div>
     
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();
      const myEmail = "<%= user.emails[0].value %>";
      const partnerEmail = "<%= partnerId %>";

      // Báo server là mình đang chat (để chuyển status thành Busy)
      socket.emit('join_chat', { myEmail, partnerEmail });

      // Rời trang thì báo server (để chuyển lại Available)
      window.onbeforeunload = function() {
          socket.emit('leave_chat', myEmail);
      };

      const chatBox = document.querySelector('.conversation');
      
      // Auto scroll xuống cuối
      chatBox.scrollTop = chatBox.scrollHeight;

      // --- Gửi tin nhắn Text ---
      document.querySelector('.message-input a').addEventListener('click', (e) => {
          e.preventDefault();
          sendMessage();
      });

      document.querySelector('.message-input input').addEventListener('keypress', (e) => {
          if (e.key === 'Enter') sendMessage();
      });

      // Hiển thị indicator khi người kia đang soạn tin
      socket.on('typing', (data) => {
          if (data.sender === partnerEmail) {
              const typingIndicator = document.querySelector('.typing');
              typingIndicator.style.display = 'block';
          }
      });

      // Ẩn indicator khi người kia ngừng soạn tin
      socket.on('stop_typing', (data) => {
          if (data.sender === partnerEmail) {
              const typingIndicator = document.querySelector('.typing');
              typingIndicator.style.display = 'none';
          }
      });

      // Gửi sự kiện đang soạn tin
      document.querySelector('.message-input input').addEventListener('input', (e) => {
          socket.emit('typing', { sender: myEmail, receiver: partnerEmail });
          
          // Dừng soạn tin sau 1 giây không gõ
          clearTimeout(typingTimeout);
          typingTimeout = setTimeout(() => {
              socket.emit('stop_typing', { sender: myEmail, receiver: partnerEmail });
          }, 1000);
      });

      let typingTimeout;

      function sendMessage() {
          const input = document.querySelector('.message-input input');
          const content = input.value;
          if(!content) return;

          // Hiển thị bên mình
          addMessageToUI(content, 'my-message');
          
          // Gửi server
          socket.emit('send_message', {
              sender: myEmail,
              receiver: partnerEmail,
              content: content,
              type: 'text'
          });
          
          // Dừng soạn tin
          socket.emit('stop_typing', { sender: myEmail, receiver: partnerEmail });
          
          input.value = '';
          chatBox.scrollTop = chatBox.scrollHeight;
      }

      // --- Xử lý kéo thả ảnh (Drag & Drop) ---
      chatBox.addEventListener('dragover', (e) => { e.preventDefault(); });
      chatBox.addEventListener('drop', (e) => {
          e.preventDefault();
          const files = e.dataTransfer.files;
          if (files.length > 0) {
              const file = files[0];
              const reader = new FileReader();
              reader.onload = function(event) {
                  const base64Img = event.target.result;
                  
                  // Hiển thị ảnh bên mình
                  addImageToUI(base64Img, 'my-message');

                  // Gửi ảnh dạng Base64 qua socket
                  socket.emit('send_message', {
                      sender: myEmail,
                      receiver: partnerEmail,
                      content: base64Img,
                      type: 'image'
                  });
              };
              reader.readAsDataURL(file);
          }
      });

      // --- Nhận tin nhắn ---
      socket.on('receive_message', (data) => {
          // Chỉ hiện nếu đúng là tin nhắn từ người mình đang chat
          if (data.sender === partnerEmail) {
              if (data.type === 'text') {
                  addMessageToUI(data.content, 'their-message');
              } else if (data.type === 'image') {
                  addImageToUI(data.content, 'their-message');
              }
              chatBox.scrollTop = chatBox.scrollHeight;
          }
      });

      // Hàm helper UI
      function addMessageToUI(text, className) {
          const div = document.createElement('div');
          div.className = `message ${className}`;
          div.innerHTML = `${text}<span class="time">${new Date().toLocaleTimeString()}</span>`;
          chatBox.appendChild(div);
      }
      
      function addImageToUI(src, className) {
          const div = document.createElement('div');
          div.className = `img-message ${className}`;
          div.innerHTML = `<img src="${src}">`;
          chatBox.appendChild(div);
      }
    </script>
</body>

</html>